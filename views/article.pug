extends layout

block content
  .col-md-8.center.float-none
    h2 Review Details
    br
    h3 Review date: #{article.date}
    .row
      .col-md-4
        h4 Teamwork:
        h4 Results: 
        h4 Comunication: 
        h4 Passion: 
        h4 Development:
        h4 Overall Result: 
        h4 Comments: 
      .col-md-8
        h4= article.teamwork
        h4= article.results
        h4= article.communication
        h4= article.passion
        h4= article.development
        h4= article.overallResult
