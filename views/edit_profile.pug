extends layout

block content
  H2 Edit Profile
  form(method='POST', action='/users/view/edit/'+users.username)
    .form-group
      label Name:
      input.form-control(name='name', type='text', value=users[0].name)
    .form-group
      label Email:
      input.form-control(name='email', type='text', value=users[0].email)
    .form-group(style="display:none;")
      label Username:
      input.form-control(name='username', type='text' value=users[0].username)
    .form-group
      label Role:
      br
      .form-check
        input.form-check-input(type='radio', name='role', value='Administrator')
        label.form-check-label(for='exampleRadios1')
          | Admin
      .form-check
        input.form-check-input(type='radio', name='role', value='Senior Management')
        label.form-check-label(for='exampleRadios1')
          | Senior Management
      .form-check
        input.form-check-input(type='radio', name='role', value='Management')
        label.form-check-label(for='exampleRadios1')
          | Management
      .form-check
        input.form-check-input(type='radio', name='role', value='Employee')
        label.form-check-label(for='exampleRadios1')
          | Employee
    .form-group
      label Team
      br
      .form-check
        input.form-check-input(type='radio', name='team', value='finance')
        label.form-check-label(for='exampleRadios1')
          | Finance
      .form-check
        input.form-check-input(type='radio', name='team', value='markeing')
        label.form-check-label(for='exampleRadios1')
          | Markeing
      .form-check
        input.form-check-input(type='radio', name='team', value='testing')
        label.form-check-label(for='exampleRadios1')
          | Testing
      .form-check
        input.form-check-input(type='radio', name='team', value='engineering')
        label.form-check-label(for='exampleRadios1')
          | Engineering
      .form-check
        input.form-check-input(type='radio', name='team', value='sales')
        label.form-check-label(for='exampleRadios1')
          | Sales
      .form-check
        input.form-check-input(type='radio', name='team', value='hr')
        label.form-check-label(for='exampleRadios1')
          | HR
      .form-check
        input.form-check-input(type='radio', name='team', value='it')
        label.form-check-label(for='exampleRadios1')
          | I.T.
      .form-check
        input.form-check-input(type='radio', name='team', value='support')
        label.form-check-label(for='exampleRadios1')
          | Support
    .form-group
      label Job Title:
      input.form-control(name='title', type='text' value=users[0].title)
    br
    a.btn.btn-danger(style="margin-left:15px; width:20%;" href='/users/view/'+users[0].username) Cancel
    input.btn.btn-primary.pull-right(type='submit', value='Submit' style="margin-right:15px; width:20%;")
