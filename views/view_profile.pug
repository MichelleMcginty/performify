extends layout

block content
    if user
        .container
            .col-md-8.center.float-none
                if (user.role =="admin")
                    h2 Profile
                    table.table.table-bordered
                        thead.thead-light
                        tr
                            th(scope="col") Name
                            th(scope="col") Email
                            th(scope="col") Username
                            th(scope="col") Role
                            th(scope="col") Team
                            th(scope="col") Title
                        tbody
                        tr
                            td= users[0].name
                            td= users[0].email
                            td= users[0].username
                            td= users[0].role
                            td= users[0].team
                            td= users[0].title
                    a.btn.btn-default(style="width:20%;" href='/users/edit/'+user._id) Edit
                    a.btn.btn-danger.delete-user-profile.pull-right(style="width:20%;" href='#', data-id=users[0].name) Delete
                else
                    h2 Employee Profile
                    .row
                        .col-xs-2
                            h4 Name
                            h4 Team
                            h4 Title
                        .col-xs-10
                            h4= users[0].name
                            h4= users[0].team
                            h4= users[0].title
                    br
                    br
                    h2 #{users[0].name}'s Self Reviews
                    each article, i in articles
                        li.list-group-item.list-reviews
                            a(href='/articles/'+article._id)= moment(article.date).format("h:mm:ss a, MMMM Do YYYY ")
                    br
                    br
                    h2 #{users[0].name}'s Performance Reviews
                    each perReview, i in perReviews
                        li.list-group-item.list-reviews
                            a(href='/perReviews/'+perReview._id)= moment(perReview.date).format("h:mm:ss a, MMMM Do YYYY ")
        
    else
        .col-md-6.center.float-none
             h1 Welcome to Performify
             h2.text-center Please Login
                .btn-hold
                    .btn-inner
                        a(class='button btn btn-default btn-success btn-login', style="width: 30%;" href='/users/login') Login
                            i.fas.fa-sign-in-alt(style="margin-left:10px;")