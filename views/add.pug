extends layout

block content
  .col-md-6.center.float-none
    h1 Add Employee    
    form(method='POST', action='/users/add')
      .form-group
        label Name:
        input.form-control(name='name', type='text')
      .form-group
        label Email:
        input.form-control(name='email', type='text')
      .form-group
        label Password:
        input.form-control(name='password', type='password')
      .form-group
        label Confirm Password:
        input.form-control(name='password2', type='password')
      .form-group
        label Username:
        input.form-control(name='username', type='text')
      .form-group
        label Role:
        br
        .form-check
          input.form-check-input(type='radio', name='role', value='Administrator')
          label.form-check-label(for='exampleRadios1')
            | Admin
        .form-check
          input.form-check-input(type='radio', name='role', value='Senior Management')
          label.form-check-label(for='exampleRadios1')
            | Senior Management
