  .layout
    body
      nav.navbar.navbar-inverse
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#') Performify
          #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav
              if user
                if (user.role =="Administrator")
                  li
                    a(href='/home') Home
                  //- li.dropdown
                  //-   a.dropdown-toggle(data-toggle='dropdown', href='#')
                  //-     | Employees
                  //-     span.caret
                  //-   ul.dropdown-menu
                  //-     li
                  //-       a(href='/users/add') Add Employee
                  //-     li
                  //-       a(href='/users/list') List Employees
                  li
                    a(href='/admin-employee-dashboard') Employee Dashboard
                else if (user.role == "Senior Management")
                  li
                    a(href='/home') Home
                  li 
                    a(href='/senior-dashboard') Review
                  li
                    a(href='/list-senior-managers') List Senior Managers
                else if (user.role == "Management")
                  li
                    a(href='/home') Home
                  li
                    a(href='/managerdashboard') Reviews
                  li
                    a(href='') Enagagments
                else if (user.role == "Employee")
                  li
                    a(href='/home') Home
                  li 
                    a(href='/employeedashboard') Reviews
                else
                  li
                    a(href='/home') Home
              if !user
                li
                  a(href='/') Home
            ul.nav.navbar-nav.navbar-right
              if user
                li
                  a(href='/users/'+user._id) Profile
                li
                  a(href='/users/logout') Logout
              else
                li
                  a(href='/users/login') Login
      .body-container
        .container.padding-top-md.padding-bottom-md
          != messages('message', locals)
          if errors
            each error, i in errors
              div(class='alert alert-danger') #{error.msg}
          //- block pageHeader
          block pageBody
          br
        hr
        footer
          p.padding-top-sm Performify &copy; 2018
