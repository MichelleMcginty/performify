extends layout

block pageBody
  if user
    .col-md-12.center.float-none
      h1 Submit Review For Employee
      form(method='POST', action='/perReviews/add_employee_review')
        .form-group.self-review
          .row
            .col-md-1.form-label-col(data-toggle="tooltip" title="Select Employee")
              label(for='list-users-in-team').form-title Select Employee:
              br
            .col-md-11.form-info-col
