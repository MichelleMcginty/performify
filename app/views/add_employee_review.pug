              .form-check.self-review-check.self-review-check-first
                input.form-check-input(type='radio', name='teamwork', value='Unsatisfactory')
                label.form-check-label.label-form(for='exampleRadios1')
                  | Unsatisfactory
              .form-check.self-review-check
                input.form-check-input(type='radio', name='teamwork', value='Needs Improvement')
                label.form-check-label.label-form(for='exampleRadios1')
