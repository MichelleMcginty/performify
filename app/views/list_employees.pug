        script.
          $.get('http://localhost:3333/listUsersGen', {}, function(data){
            //- console.log(data);
            var g = data;
            let Female = 0;
            let Male = 0;
            let Transgender = 0;
            let Other = 0
            
            for (var i = 0; i < g.length; i++) {
              if (g[i].gender === 'Female') {
                Female += 1;
              }
              else if (g[i].gender === 'Male') {
                Male += 1;
              }
              else if (g[i].gender === 'Transgender') {
                Transgender += 1;
              }
              else {
                Other+= 1;
              }
            }
            let labels = ['Male', 'Female', 'Trangender' , 'Other'];
            var ctx = document.getElementById("myChart").getContext('2d');
            var myChart = new Chart(ctx, {
              type: 'pie',
              data: {
                  labels: labels,
                  datasets: [{
                      label: '# of Votes',
                      data:[Male , Female , Transgender , Other],
                      backgroundColor: [
                          'rgba(255, 99, 132, 0.2)',
                          'rgba(54, 162, 235, 0.2)',
                          'rgba(255, 206, 86, 0.2)',
                          'rgba(75, 192, 192, 0.2)',
                          'rgba(153, 102, 255, 0.2)',
                          'rgba(255, 159, 64, 0.2)'
                      ],
                      borderColor: [
                          'rgba(255,99,132,1)',
                          'rgba(54, 162, 235, 1)',
                          'rgba(255, 206, 86, 1)',
                          'rgba(75, 192, 192, 1)',
                          'rgba(153, 102, 255, 1)',
                          'rgba(255, 159, 64, 1)'
                      ],
                      borderWidth: 1
                  }]
              },
